<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, id: :user_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, id: :user_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, id: :user_last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, id: :user_image, direct_upload: true %>
  </div>

  <div class="form-group">
    <%= f.label :birth_date %>
    <%= f.date_select :birth_date, id: :user_birth_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :security_question %>
    <%= f.text_field :security_question, id: :user_security_question, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :security_answer %>
    <%= f.text_field :security_answer, id: :user_security_answer, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default " %>
  </div>
<% end %>