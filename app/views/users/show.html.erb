<h1><%= @user.email %></h1>
<div class="row">
  <div class="col-md-4">
    <h2>Profile Information</h2>
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>
    <p>
      <strong>Last Name:</strong>
      <%= @user.last_name %>
    </p>
    <p>
      <strong>Birth date:</strong>
      <%= @user.birth_date %>
    </p>
    <p>
      <strong>Address:</strong>
      <%= @user.address %>
    </p>
    <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-default" %>
    <h2>My Projects</h2>
    <% for p in @info[:projects] do %>
      <h3><%= link_to p.title, p %></h3>
    <% end %>
  </div>
  <div class="col-md-4">
    <h2>My Wishlist</h2>
    <% for w in @info[:wishlist] do %>
      <h3><%= link_to w.project.title, w.project %></h3>
    <% end %>
    <h2>Funded Projects</h2>
    <% for p in @info[:funded] do %>
      <h3><%= link_to p.title, p %></h3>
    <% end %>
  </div>
  <div class="col-md-4 text-center">
    <%= image_tag @user.image.attached? ? @user.image : "", class: "img img-responsive img-circle" %>
  </div>
</div>
